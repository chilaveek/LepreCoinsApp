<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Цветовая палитра -->
    <Color x:Key="DarkBg">#0F1419</Color>
    <Color x:Key="SecondaryBg">#1A1F2E</Color>
    <Color x:Key="TertiaryBg">#252B3A</Color>
    <Color x:Key="AccentBlue">#00D4FF</Color>
    <Color x:Key="AccentPurple">#7B5AFF</Color>
    <Color x:Key="AccentGreen">#00FF88</Color>
    <Color x:Key="AccentOrange">#FF6B35</Color>
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#B0B8C1</Color>
    <Color x:Key="TextTertiary">#808B96</Color>
    <Color x:Key="BorderColor">#2A3142</Color>

    <!-- Стили компонентов -->

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource AccentBlue}" />
    </Style>

    <Style TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryBg}" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource AccentBlue}"
                        Opacity="0.15"
                        Radius="12"
                        Offset="0,6" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource BorderColor}" />
        <Setter Property="HeightRequest" Value="1" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource DarkBg}" />
        <Setter Property="BackgroundColor" Value="{StaticResource AccentBlue}" />
        <Setter Property="FontFamily" Value="ActayWide-Bold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="24,14"/>
        <Setter Property="MinimumHeightRequest" Value="50"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource AccentBlue}" Offset="0,6" Radius="12" Opacity="0.35"/>
            </Setter.Value>
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.8" />
                            <Setter Property="Scale" Value="0.98" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource TertiaryBg}" />
                            <Setter Property="TextColor" Value="{StaticResource TextTertiary}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="SecondaryButton">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource TertiaryBg}" />
        <Setter Property="FontFamily" Value="ActayWide-Bold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="24,14"/>
        <Setter Property="MinimumHeightRequest" Value="50"/>
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource BorderColor}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="AccentPurpleButton">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource AccentPurple}" />
        <Setter Property="FontFamily" Value="ActayWide-Bold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="24,14"/>
        <Setter Property="MinimumHeightRequest" Value="50"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource AccentPurple}" Offset="0,6" Radius="12" Opacity="0.35"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{StaticResource AccentBlue}" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource TertiaryBg}" />
        <Setter Property="FontFamily" Value="ActayWide-Bold"/>
        <Setter Property="FontSize" Value="15" />
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource SecondaryBg}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource TertiaryBg}" />
        <Setter Property="FontFamily" Value="ActayWide-Bold"/>
        <Setter Property="FontSize" Value="15" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontFamily" Value="ActayWide-Bold" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Label" x:Key="HeaderLabel">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontFamily" Value="ActayWide-Bold" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="Margin" Value="0,8" />
    </Style>

    <Style TargetType="Label" x:Key="SectionHeaderLabel">
        <Setter Property="TextColor" Value="{StaticResource AccentBlue}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontFamily" Value="ActayWide-Bold" />
    </Style>

    <Style TargetType="Label" x:Key="MoneyLabel">
        <Setter Property="TextColor" Value="{StaticResource AccentBlue}" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontFamily" Value="ActayWide-Bold" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style TargetType="Label" x:Key="SubLabel">
        <Setter Property="TextColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="ActayWide-Bold" />
    </Style>

    <Style TargetType="Label" x:Key="IncomeLabel">
        <Setter Property="TextColor" Value="{StaticResource AccentGreen}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="ActayWide-Bold" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style TargetType="Label" x:Key="ExpenseLabel">
        <Setter Property="TextColor" Value="{StaticResource AccentOrange}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="ActayWide-Bold" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource TertiaryBg}" />
        <Setter Property="FontFamily" Value="ActayWide-Bold"/>
        <Setter Property="FontSize" Value="15" />
    </Style>

    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource AccentBlue}" />
        <Setter Property="ScaleY" Value="2.0" />
        <Setter Property="BackgroundColor" Value="{StaticResource BorderColor}" />
    </Style>

    <Style TargetType="Slider">
        <Setter Property="MinimumTrackColor" Value="{StaticResource AccentBlue}" />
        <Setter Property="MaximumTrackColor" Value="{StaticResource BorderColor}" />
        <Setter Property="ThumbColor" Value="{StaticResource AccentBlue}" />
    </Style>

    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource AccentBlue}" />
        <Setter Property="ThumbColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource DarkBg}" />
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource SecondaryBg}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource AccentBlue}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="Shell.DisabledColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="Shell.UnselectedColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="Shell.NavBarHasShadow" Value="False" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource DarkBg}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource AccentBlue}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource TextTertiary}" />
    </Style>

    <Style TargetType="CollectionView">
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>

    <Style TargetType="ScrollView">
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>

</ResourceDictionary>
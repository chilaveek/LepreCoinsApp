<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LepreCoinsApp.Views.ReportsPage"
             Title="Аналитика"
             BackgroundColor="#0F1419">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Label Text="Аналитика бюджета" FontSize="26" FontAttributes="Bold" TextColor="White" Margin="0,0,0,10"/>

            <Frame BackgroundColor="#1a1f26" CornerRadius="12" BorderColor="#222" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="ДАТА НАЧАЛА" TextColor="#777" FontSize="10" FontAttributes="Bold"/>
                            <DatePicker Date="{Binding PeriodStartDate}" TextColor="White"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="ДАТА КОНЦА" TextColor="#777" FontSize="10" FontAttributes="Bold"/>
                            <DatePicker Date="{Binding PeriodEndDate}" TextColor="White"/>
                        </VerticalStackLayout>
                    </Grid>

                    <BoxView HeightRequest="1" Color="#222" Margin="0,5"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="СОРТИРОВКА" TextColor="#777" FontSize="10" FontAttributes="Bold"/>
                        <Picker SelectedItem="{Binding SelectedSortType}" TextColor="White" TitleColor="#555" Title="Выберите порядок">
                            <Picker.Items>
                                <x:String>Сначала новые</x:String>
                                <x:String>Сначала дорогие</x:String>
                                <x:String>Сначала дешевые</x:String>
                                <x:String>Сначала доходы</x:String>
                                <x:String>Сначала расходы</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <Button Text="СФОРМИРОВАТЬ ОТЧЕТ" 
                            Command="{Binding GenerateReportCommand}" 
                            BackgroundColor="#2ecc71" 
                            TextColor="White" 
                            FontAttributes="Bold" 
                            HeightRequest="50"
                            CornerRadius="8"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="{Binding CustomDateError}" TextColor="#e74c3c" FontSize="12" HorizontalOptions="Center"/>

            <VerticalStackLayout IsVisible="{Binding IsReportVisible}" Spacing="15">

                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <Frame Grid.Column="0" BackgroundColor="#2d1a1a" BorderColor="#e74c3c" Padding="12" CornerRadius="10">
                        <VerticalStackLayout>
                            <Label Text="MAX РАСХОД" FontSize="10" TextColor="#ff7675" FontAttributes="Bold"/>
                            <Label Text="{Binding MaxExpenseCategory}" TextColor="White" FontSize="13" MaxLines="1" LineBreakMode="TailTruncation"/>
                            <Label Text="{Binding MaxExpenseAmount, StringFormat='{0:C}'}" TextColor="White" FontAttributes="Bold" FontSize="15"/>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame Grid.Column="1" BackgroundColor="#1a2d21" BorderColor="#2ecc71" Padding="12" CornerRadius="10">
                        <VerticalStackLayout>
                            <Label Text="MAX ДОХОД" FontSize="10" TextColor="#55efc4" FontAttributes="Bold"/>
                            <Label Text="{Binding MaxIncomeCategory}" TextColor="White" FontSize="13" MaxLines="1" LineBreakMode="TailTruncation"/>
                            <Label Text="{Binding MaxIncomeAmount, StringFormat='{0:C}'}" TextColor="White" FontAttributes="Bold" FontSize="15"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <Frame BackgroundColor="#1a1f26" Padding="15" CornerRadius="12" BorderColor="#333">
                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*" RowSpacing="12">
                        <Label Grid.Row="0" Grid.Column="0" Text="Общий доход" TextColor="#bbb"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding TotalIncome, StringFormat='{0:C}'}" TextColor="#2ecc71" HorizontalOptions="End" FontAttributes="Bold"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="Общий расход" TextColor="#bbb"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding TotalExpenses, StringFormat='{0:C}'}" TextColor="#e74c3c" HorizontalOptions="End" FontAttributes="Bold"/>

                        <BoxView Grid.Row="2" Grid.ColumnSpan="2" HeightRequest="1" Color="#222" VerticalOptions="Start"/>
                        <Label Grid.Row="2" Grid.Column="0" Text="Итоговая прибыль" FontAttributes="Bold" TextColor="White" VerticalOptions="End"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding NetCash, StringFormat='{0:C}'}" TextColor="#3498db" FontAttributes="Bold" FontSize="18" HorizontalOptions="End"/>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="#1a1f26" Padding="15" CornerRadius="12" BorderColor="#333">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ДЕТАЛИЗАЦИЯ ОПЕРАЦИЙ" TextColor="#777" FontSize="10" FontAttributes="Bold"/>

                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding ReportTransactions}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="#0a0a0a" BorderColor="#222" Margin="0,0,0,8" Padding="12" CornerRadius="8">
                                        <Grid ColumnDefinitions="65,*,Auto">
                                            <Label Text="{Binding Type}" FontSize="11" TextColor="#666" VerticalOptions="Center"/>
                                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Margin="10,0">
                                                <Label Text="{Binding Description}" TextColor="White" FontSize="14"/>
                                                <Label Text="{Binding Date, StringFormat='{0:dd.MM.yyyy}'}" TextColor="#777" FontSize="11"/>
                                            </VerticalStackLayout>
                                            <Label Grid.Column="2" Text="{Binding Amount, StringFormat='{0:N2}'}" TextColor="White" FontAttributes="Bold" VerticalOptions="Center"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>

                        <Label IsVisible="{Binding ReportTransactions.Count, Converter={StaticResource IntToBoolInvertedConverter}}" 
               Text="Выше находятся все транзакции за данный период" TextColor="#888" HorizontalOptions="Center" Margin="20"/>
                    </VerticalStackLayout>
                </Frame>

                <Button Text="ЭКСПОРТ В PDF" Command="{Binding SaveReportToPdfCommand}" 
                        BackgroundColor="#34495e" TextColor="White" CornerRadius="8" HeightRequest="45" Margin="0,5,0,20"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<?xml version = "1.0" encoding = "UTF-8" ?>
<Shell
    x:Class="LepreCoinsApp.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LepreCoinsApp.Views">

    <TabBar>
        <ShellContent 
            Title="Главная" 
            ContentTemplate="{DataTemplate local:MainPage}" 
            Route="main" />

        <ShellContent 
            Title="Бюджет" 
            ContentTemplate="{DataTemplate local:BudgetPage}" 
            Route="budget" />

        <ShellContent 
            Title="Отчеты" 
            ContentTemplate="{DataTemplate local:ReportsPage}" 
            Route="reports" />

        <ShellContent 
            Title="Кошельки" 
            ContentTemplate="{DataTemplate local:WalletsPage}" 
            Route="wallets" />
    </TabBar>

</Shell>
